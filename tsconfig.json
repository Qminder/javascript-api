{
  "compilerOptions": {
    "module": "es2020",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2020",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "rootDir": "src",
    "declaration": true
  },
  "include": ["src/**/*"],
  "files": ["src/qminder-api.ts"]
}
