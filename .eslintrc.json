{
  "env": {
    "browser": true
  },
  "extends": ["eslint:recommended", "@qminder", "prettier"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["**/*.test.ts"] }
    ]
  },
  "overrides": [
    {
      "files": ["*.test.ts"],
      "env": {
        "jest": true
      },
      "rules": {
        "func-names": "off"
      }
    }
  ]
}
