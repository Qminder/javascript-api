{
  "env": {
    "browser": true
  },
  "plugins": [
    "import",
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "rules": {
    "import/namespace": "off",
    "no-unused-vars": "off",
    "import/no-named-as-default": "off"
  },
  "overrides": [
    {
      "files": [
        "*.spec.ts"
      ],
      "env": {
        "jest": true,
        "node": true
      },
      "globals": {
        "globalThis": false
      },
      "rules": {
        "func-names": "off"
      }
    }
  ]
}
